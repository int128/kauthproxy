{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "digest"],
      "automerge": true
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "regexManagers": [
    {
      "fileMatch": ["Makefile"],
      "matchStrings": ["# renovate: depName=(?<depName>.*?)\\s.*?_VERSION := (?<currentValue>.*?)\\s"],
      "datasourceTemplate": "github-releases"
    }
  ]
}
