{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "digest"],
      "automerge": true
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "regexManagers": [
    {
      "fileMatch": ["Makefile"],
      "matchStrings": ["_VERSION := (?<currentValue>.*?) # renovate: depName=(?<depName>.*?)\\n"],
      "datasourceTemplate": "github-releases"
    }
  ]
}
