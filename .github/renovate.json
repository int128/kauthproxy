{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "digest"],
      "automerge": true
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "regexManagers": [
    {
      "fileMatch": ["kustomization.yaml"],
      "matchStrings": ["https://raw.githubusercontent.com/kubernetes/dashboard/(?<currentValue>.*)/aio/deploy/recommended.yaml"],
      "depNameTemplate": "kubernetes/dashboard",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": ["kustomization.yaml"],
      "matchStrings": ["https://github.com/kubernetes-sigs/metrics-server/releases/download/(?<currentValue>.*)/components.yaml"],
      "depNameTemplate": "kubernetes-sigs/metrics-server",
      "datasourceTemplate": "github-releases"
    }
  ]
}
